groups:
- name: kubernetes-endpoints-alerts
  rules:
  - alert: HighHttpRequests
    expr: rate(http_requests_total{job="kubernetes-endpoints"}[5m]) > 100
    for: 1m
    labels:
      severity: critical
    annotations:
      summary: "High rate of HTTP requests in kubernetes-endpoints"
      description: "The rate of HTTP requests has exceeded 100 requests per second in the kubernetes-endpoints job."

